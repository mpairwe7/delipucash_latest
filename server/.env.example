# Database Configuration
# Direct connection for migrations and local development
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"
# For migrations when using Accelerate (same as DATABASE_URL)
DIRECT_DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# Prisma Accelerate (Optional - for production caching & connection pooling)
# Get your API key at https://console.prisma.io
# ACCELERATE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# Server Configuration
PORT=3000
NODE_ENV="development"

# JWT Configuration
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="7d"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"

# Email Configuration
EMAIL_USER="your_email@gmail.com"
EMAIL_PASS="your_app_password"

# Frontend URL (for CORS)
FRONTEND_URL="https://your-frontend-domain.vercel.app"

# Vercel Environment
VERCEL="1"

# MTN Mobile Money Configuration (Sandbox: sandbox.momodeveloper.mtn.com)
MTN_USER_ID="your_mtn_api_user_uuid"
MTN_API_KEY="your_mtn_api_key"
MTN_PRIMARY_KEY="your_mtn_collection_subscription_key"
MTN_DISBURSEMENT_KEY="your_mtn_disbursement_subscription_key"
X_TARGET_ENVIRONMENT="sandbox"

# Airtel Money Configuration (Sandbox: openapiuat.airtel.africa)
AIRTEL_CLIENT_ID="your_airtel_client_id"
AIRTEL_CLIENT_SECRET="your_airtel_client_secret"
AIRTEL_PIN="1234"
AIRTEL_CALLBACK_URL="https://yourdomain.com/api/payments/callback"

# Cloudflare R2 Storage Configuration
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"
R2_ACCESS_KEY_ID="your_r2_access_key_id"
R2_SECRET_ACCESS_KEY="your_r2_secret_access_key"
R2_BUCKET_NAME="your_bucket_name"
R2_PUBLIC_URL="https://cdn.yourdomain.com"  # Optional: Custom domain or R2 public URL

# Development (optional)
# sdk.dir=/path/to/android/sdk
